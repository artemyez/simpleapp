<div class="col-lg-6 p-3">
<p>
  <%= link_to "Add employee", new_employee_path, class: 'btn btn-sm btn-primary' %>
  <%= link_to "Add department", new_department_path, class: 'btn btn-sm btn-primary' %>
</p>
<div>
  <%= form_tag employees_path, method: 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", name: nil %>
  <% end %>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |d| %>
    <tr>
      <td><%= d.id %></td>
      <td><%= d.name %></td>
      <td><%= link_to 'Delete', department_path(d), method: :delete,
        data: { confirm: 'Are you sure?' }, class: 'btn btn-light'%>
        <%= link_to('Edit', edit_department_path(d), class: 'btn btn-light') %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
