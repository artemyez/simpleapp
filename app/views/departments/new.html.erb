<div class="row">
  <div class="col-lg-6">
    <%= form_for (Department.new), url: departments_path do |f| %>
      <div class="form-group">
        <%= f.label "Department name" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Back", departments_path, class: "btn btn-light" %>
    <% end %>
  </div>
</div>
