<div class="row">
  <div class="col-sm-6">
    <%= form_for (@employee), url: employee_path do |f| %>
      <div class="form-group">
        <%= f.label "Name" %>
        <%= f.text_field :name, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label "Active" %>
        <%= f.text_area :active, class: "form-control", :required => true %>
      </div>
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Back", employees_path, class: "btn btn-light" %>
    <% end %>
  </div>
</div>
