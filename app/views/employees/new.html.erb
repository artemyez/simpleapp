<div class="row">
  <div class="col-sm-6">
    <%= form_for (Employees.new), url: employees_path do |f| %>
      <div class="form-group">
        <%= f.collection_select :department_id, Department.all, :id, :name, {:prompt => 'Choose category'}, {:class => "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label "Name" %>
        <%= f.text_field :name, class: "form-control", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label "Active" %>
        <%= f.text_area :active, class: "form-control", :required => true %>
      </div>
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Back", employees_path, class: "btn btn-light" %>
    <% end %>
  </div>
</div>
